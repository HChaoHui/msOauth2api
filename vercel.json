{
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/doc/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/doc/$1"
    },
    {
      "source": "/mail.html",
      "destination": "/public/mail.html"
    }
  ],
  "headers": [
    {
      "source": "/mail.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}